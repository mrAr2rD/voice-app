<%= turbo_frame_tag dom_id(batch_job) do %>
  <%= link_to batch_job_path(batch_job),
      class: "block rounded-xl p-5 transition-all duration-200 hover:translate-x-1",
      style: "background: var(--color-abyss); border: 1px solid var(--color-graphite);" do %>
    <div class="flex items-center justify-between">
      <div class="flex items-center flex-1">
        <div class="w-12 h-12 rounded-xl flex items-center justify-center mr-4"
             style="background: rgba(94, 92, 230, 0.15);">
          <svg class="w-6 h-6" style="color: var(--color-neon-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="font-medium" style="color: var(--color-snow);">
            <%= batch_job.name.presence || batch_job.job_type_display %>
          </h3>
          <p class="text-sm" style="color: var(--color-mist);">
            <%= time_ago_in_words(batch_job.created_at) %> назад
            <span class="mx-1">&bull;</span>
            <%= batch_job.completed_items %>/<%= batch_job.total_items %> элементов
          </p>
        </div>
      </div>

      <div class="flex items-center space-x-4">
        <% if batch_job.in_progress? %>
          <div class="w-32">
            <div class="flex items-center justify-between text-xs mb-1">
              <span style="color: var(--color-mist);">Прогресс</span>
              <span style="color: var(--color-neon-purple);"><%= batch_job.progress_percentage %>%</span>
            </div>
            <div class="h-2 rounded-full overflow-hidden" style="background: var(--color-obsidian);">
              <div class="h-full rounded-full transition-all duration-500"
                   style="background: var(--color-neon-purple); width: <%= batch_job.progress_percentage %>%;">
              </div>
            </div>
          </div>
        <% end %>

        <%= render "batch_jobs/status_badge", batch_job: batch_job %>
      </div>
    </div>
  <% end %>
<% end %>
