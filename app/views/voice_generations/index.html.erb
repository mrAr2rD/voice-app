<div class="animate-fade-in">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center">
      <div class="w-12 h-12 rounded-xl flex items-center justify-center mr-4"
           style="background: rgba(94, 92, 230, 0.15); border: 1px solid rgba(94, 92, 230, 0.3);">
        <svg class="w-6 h-6" style="color: var(--color-neon-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
        </svg>
      </div>
      <div>
        <h1 class="text-2xl font-bold" style="color: var(--color-snow);">Озвучки</h1>
        <p class="text-sm" style="color: var(--color-mist);">История всех ваших озвучек</p>
      </div>
    </div>

    <%= link_to new_voice_generation_path,
        class: "inline-flex items-center px-5 py-2.5 rounded-xl font-semibold transition-all duration-300 hover:scale-105",
        style: "background: linear-gradient(135deg, var(--color-neon-purple) 0%, var(--color-neon-pink) 100%); color: white; box-shadow: 0 10px 40px rgba(94, 92, 230, 0.3);" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Новая озвучка
    <% end %>
  </div>

  <%= turbo_stream_from "user_#{current_user.id}_voice_generations" %>

  <div id="voice_generations" class="space-y-4">
    <% if @voice_generations.empty? %>
      <div class="text-center py-16 rounded-2xl" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
        <div class="w-20 h-20 mx-auto rounded-2xl flex items-center justify-center mb-6"
             style="background: rgba(94, 92, 230, 0.1); border: 1px solid rgba(94, 92, 230, 0.2);">
          <svg class="w-10 h-10" style="color: var(--color-neon-purple); opacity: 0.5;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2" style="color: var(--color-snow);">Нет озвучек</h3>
        <p class="mb-6" style="color: var(--color-mist);">Начните с создания новой озвучки</p>
        <%= link_to new_voice_generation_path,
            class: "inline-flex items-center px-6 py-3 rounded-xl font-semibold transition-all duration-300 hover:scale-105",
            style: "background: var(--color-neon-purple); color: white;" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Создать озвучку
        <% end %>
      </div>
    <% else %>
      <%= render @voice_generations %>
    <% end %>
  </div>
</div>
