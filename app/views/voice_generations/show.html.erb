<% content_for :page_title, "Озвучка" %>

<% content_for :page_actions do %>
  <div class="flex items-center space-x-3">
    <% if @voice_generation.completed? && @voice_generation.audio_file.attached? %>
      <%= link_to download_voice_generation_path(@voice_generation),
          class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:scale-105",
          style: "background: var(--color-neon-purple); color: white;" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
        Скачать MP3
      <% end %>
    <% end %>

    <%= render "voice_generations/status_badge", voice_generation: @voice_generation %>

    <%= button_to voice_generation_path(@voice_generation),
        method: :delete,
        data: { turbo_confirm: "Удалить озвучку?" },
        class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:bg-white/10",
        style: "border: 1px solid var(--color-graphite); color: var(--color-coral);" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    <% end %>
  </div>
<% end %>

<%= turbo_stream_from "user_#{current_user.id}_voice_generations" %>

<div class="max-w-3xl mx-auto animate-fade-in">
  <!-- Provider & Voice Info -->
  <div class="flex items-center space-x-4 mb-6 text-sm" style="color: var(--color-mist);">
    <span class="flex items-center px-2 py-0.5 rounded-full"
          style="<%= @voice_generation.elevenlabs? ? 'background: rgba(94, 92, 230, 0.15); color: var(--color-neon-purple);' : 'background: rgba(48, 209, 88, 0.15); color: var(--color-neon-green);' %>">
      <%= @voice_generation.provider_display_name %>
    </span>
    <% if @voice_generation.voice_name %>
      <span>Голос: <%= @voice_generation.voice_name %></span>
    <% end %>
  </div>

  <!-- Content -->
  <% polling_data = @voice_generation.in_progress? ? { controller: "polling", polling_interval_value: 2000, polling_url_value: voice_generation_path(@voice_generation) } : {} %>
  <%= turbo_frame_tag dom_id(@voice_generation, :content), data: polling_data do %>
    <% if @voice_generation.failed? %>
      <div class="rounded-2xl p-8 mb-6"
           style="background: rgba(255, 55, 95, 0.1); border: 1px solid rgba(255, 55, 95, 0.2);">
        <div class="flex items-start">
          <div class="w-12 h-12 rounded-xl flex items-center justify-center mr-4 flex-shrink-0"
               style="background: rgba(255, 55, 95, 0.2);">
            <svg class="w-6 h-6" style="color: var(--color-coral);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold mb-2" style="color: var(--color-coral);">Ошибка генерации</h3>
            <p style="color: var(--color-cloud);"><%= @voice_generation.error_message %></p>
          </div>
        </div>
      </div>

    <% elsif @voice_generation.completed? && @voice_generation.audio_file.attached? %>
      <div class="rounded-2xl p-6 mb-6" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
        <h2 class="text-lg font-semibold mb-4" style="color: var(--color-snow);">Результат</h2>

        <div class="p-4 rounded-xl" style="background: var(--color-obsidian);" data-controller="audio-player">
          <audio controls class="w-full" style="height: 48px;" data-audio-player-target="audio">
            <source src="<%= rails_blob_path(@voice_generation.audio_file, disposition: "attachment") %>" type="audio/mpeg">
            Ваш браузер не поддерживает аудио плеер.
          </audio>
        </div>
      </div>

    <% else %>
      <!-- Progress State -->
      <div class="rounded-2xl p-12 text-center" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);" data-polling-target="content">
        <div class="relative inline-flex">
          <div class="w-20 h-20 rounded-2xl flex items-center justify-center animate-pulse-glow"
               style="background: rgba(94, 92, 230, 0.1); border: 1px solid rgba(94, 92, 230, 0.3);">
            <svg class="w-10 h-10 animate-spin" style="color: var(--color-neon-purple);" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
            </svg>
          </div>
        </div>

        <h3 class="text-xl font-semibold mt-6 mb-2" style="color: var(--color-snow);">
          <% if @voice_generation.pending? %>
            Ожидание в очереди...
          <% else %>
            Генерация аудио...
          <% end %>
        </h3>
        <p style="color: var(--color-mist);">Обычно это занимает несколько секунд</p>

        <!-- Waveform animation -->
        <div class="flex items-center justify-center gap-1 mt-6">
          <% 5.times do |i| %>
            <div class="waveform-bar" style="animation-delay: <%= i * 0.1 %>s;"></div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <!-- Text Card -->
  <div class="rounded-2xl p-6 mt-6" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
    <h2 class="text-lg font-semibold mb-4" style="color: var(--color-snow);">Текст</h2>
    <p class="whitespace-pre-wrap" style="color: var(--color-cloud);"><%= @voice_generation.text %></p>
  </div>

</div>
