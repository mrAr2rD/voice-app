<%= turbo_frame_tag dom_id(voice_generation) do %>
  <div class="group rounded-2xl p-5 transition-all duration-300 hover:bg-white/5"
       style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
    <div class="flex items-start justify-between">
      <div class="flex-1 min-w-0">
        <%= link_to voice_generation, class: "block", data: { turbo_frame: "_top" } do %>
          <p class="text-base font-medium truncate transition-colors group-hover:text-white"
             style="color: var(--color-snow);">
            <%= voice_generation.text_preview(80) %>
          </p>
        <% end %>

        <div class="flex items-center mt-3 space-x-4 text-sm" style="color: var(--color-mist);">
          <span class="flex items-center px-2 py-0.5 rounded-full text-xs font-medium"
                style="<%= voice_generation.elevenlabs? ? 'background: rgba(94, 92, 230, 0.15); color: var(--color-neon-purple);' : 'background: rgba(48, 209, 88, 0.15); color: var(--color-neon-green);' %>">
            <%= voice_generation.provider_display_name %>
          </span>
          <% if voice_generation.voice_name %>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <%= voice_generation.voice_name %>
            </span>
          <% end %>
          <span><%= l(voice_generation.created_at, format: :short) %></span>
        </div>
      </div>

      <div class="ml-4 flex items-center space-x-2">
        <%= render "voice_generations/status_badge", voice_generation: voice_generation %>
      </div>
    </div>
  </div>
<% end %>
