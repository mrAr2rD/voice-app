<%= turbo_frame_tag dom_id(script) do %>
  <%= link_to script_path(script),
      class: "block rounded-xl p-5 transition-all duration-200 hover:translate-x-1",
      style: "background: var(--color-abyss); border: 1px solid var(--color-graphite);" do %>
    <div class="flex items-center justify-between">
      <div class="flex items-center flex-1 min-w-0">
        <div class="w-12 h-12 rounded-xl flex items-center justify-center mr-4 flex-shrink-0"
             style="background: rgba(94, 92, 230, 0.15);">
          <svg class="w-6 h-6" style="color: var(--color-neon-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <div class="min-w-0">
          <h3 class="font-medium truncate" style="color: var(--color-snow);"><%= script.display_title %></h3>
          <p class="text-sm truncate" style="color: var(--color-mist);">
            <%= script.script_type_name %>
            <span class="mx-1">&bull;</span>
            <%= time_ago_in_words(script.created_at) %> назад
            <% if script.completed? %>
              <span class="mx-1">&bull;</span>
              <%= script.word_count %> слов
            <% end %>
          </p>
        </div>
      </div>

      <%= render "scripts/status_badge", script: script %>
    </div>
  <% end %>
<% end %>
