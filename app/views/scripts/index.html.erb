<% content_for :page_title, "AI Сценарии" %>

<% content_for :page_actions do %>
  <%= link_to new_script_path,
      class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:scale-105",
      style: "background: var(--color-neon-purple); color: white;" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Новый сценарий
  <% end %>
<% end %>

<%= turbo_stream_from "user_#{current_user.id}_scripts" %>

<div class="mb-6">
  <div class="rounded-xl p-4" style="background: rgba(94, 92, 230, 0.1); border: 1px solid rgba(94, 92, 230, 0.2);">
    <div class="flex items-start">
      <svg class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0" style="color: var(--color-neon-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
      <div>
        <p class="text-sm" style="color: var(--color-cloud);">
          AI Script Writer генерирует готовые сценарии для видео.
          Выберите тип, укажите тему - и получите структурированный текст для озвучки.
        </p>
      </div>
    </div>
  </div>
</div>

<div id="scripts" class="space-y-4">
  <% if @scripts.empty? %>
    <div class="text-center py-16 rounded-2xl" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
      <div class="w-20 h-20 mx-auto rounded-2xl flex items-center justify-center mb-6"
           style="background: rgba(94, 92, 230, 0.1); border: 1px solid rgba(94, 92, 230, 0.2);">
        <svg class="w-10 h-10" style="color: var(--color-neon-purple); opacity: 0.5;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold mb-2" style="color: var(--color-snow);">Нет сценариев</h3>
      <p class="mb-6" style="color: var(--color-mist);">Создайте первый AI-сценарий для видео</p>
      <%= link_to new_script_path,
          class: "inline-flex items-center px-6 py-3 rounded-xl font-semibold transition-all duration-300 hover:scale-105",
          style: "background: var(--color-neon-purple); color: white;" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Создать сценарий
      <% end %>
    </div>
  <% else %>
    <%= render @scripts %>
  <% end %>
</div>
