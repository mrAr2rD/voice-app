<nav class="glass sticky top-0 z-50 border-b" style="border-color: var(--color-graphite);">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center space-x-8">
        <%= link_to root_path, class: "flex items-center group" do %>
          <div class="relative">
            <div class="w-10 h-10 rounded-xl flex items-center justify-center transition-all duration-300 group-hover:scale-105"
                 style="background: var(--gradient-aurora);">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
              </svg>
            </div>
          </div>
          <span class="ml-3 text-xl font-bold tracking-tight" style="color: var(--color-snow);">
            App<span class="text-gradient">Caster</span>
          </span>
        <% end %>

        <% if logged_in? %>
          <div class="hidden md:flex items-center space-x-1">
            <%= link_to new_transcription_path,
                class: "px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 hover:bg-white/5",
                style: "color: var(--color-cloud);" do %>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
                </svg>
                Транскрибация
              </span>
            <% end %>

            <%= link_to new_voice_generation_path,
                class: "px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 hover:bg-white/5",
                style: "color: var(--color-cloud);" do %>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
                </svg>
                Озвучка
              </span>
            <% end %>

            <%= link_to transcriptions_path,
                class: "px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 hover:bg-white/5",
                style: "color: var(--color-cloud);" do %>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                История
              </span>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Right side -->
      <div class="flex items-center space-x-3">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <%= link_to admin_root_path,
                class: "hidden sm:flex items-center px-3 py-1.5 rounded-lg text-sm font-medium transition-all duration-200",
                style: "background: rgba(251, 191, 36, 0.1); color: var(--color-gold); border: 1px solid rgba(251, 191, 36, 0.3);" do %>
              <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Админ
            <% end %>
          <% end %>

          <%= link_to profile_path,
              class: "flex items-center px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-white/5" do %>
            <div class="w-8 h-8 rounded-lg flex items-center justify-center text-sm font-bold"
                 style="background: var(--gradient-aurora); color: var(--color-void);">
              <%= current_user.name[0].upcase %>
            </div>
            <span class="hidden sm:block ml-2 text-sm font-medium" style="color: var(--color-snow);">
              <%= current_user.name %>
            </span>
          <% end %>

          <%= button_to logout_path, method: :delete,
              class: "p-2 rounded-lg transition-all duration-200 hover:bg-white/5",
              style: "color: var(--color-mist);" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
          <% end %>
        <% else %>
          <%= link_to login_path,
              class: "px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 hover:bg-white/5",
              style: "color: var(--color-cloud);" do %>
            Войти
          <% end %>

          <%= link_to signup_path,
              class: "px-5 py-2 rounded-lg text-sm font-semibold transition-all duration-300 hover:scale-105",
              style: "background: var(--gradient-aurora); color: var(--color-void);" do %>
            Регистрация
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
