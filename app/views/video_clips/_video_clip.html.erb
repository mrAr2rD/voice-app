<%= turbo_frame_tag dom_id(video_clip) do %>
  <%= link_to video_clip_path(video_clip),
      class: "block rounded-xl overflow-hidden transition-all duration-200 hover:scale-[1.02]",
      style: "background: var(--color-abyss); border: 1px solid var(--color-graphite);" do %>

    <!-- Thumbnail -->
    <div class="aspect-[9/16] relative" style="background: var(--color-obsidian);">
      <% if video_clip.output_video.attached? && video_clip.completed? %>
        <video class="w-full h-full object-cover" muted>
          <source src="<%= url_for(video_clip.output_video) %>" type="video/mp4">
        </video>
      <% else %>
        <div class="absolute inset-0 flex items-center justify-center">
          <% if video_clip.in_progress? %>
            <svg class="animate-spin w-10 h-10" style="color: var(--color-coral);" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          <% else %>
            <svg class="w-10 h-10" style="color: var(--color-mist);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          <% end %>
        </div>
      <% end %>

      <!-- Duration Badge -->
      <% if video_clip.duration %>
        <div class="absolute bottom-2 right-2 px-2 py-1 rounded text-xs font-medium"
             style="background: rgba(0,0,0,0.7); color: white;">
          <%= video_clip.duration_formatted %>
        </div>
      <% end %>

      <!-- Status Badge -->
      <div class="absolute top-2 left-2">
        <%= render "video_clips/status_badge", video_clip: video_clip %>
      </div>

      <% if video_clip.virality_score && video_clip.virality_score > 0 %>
        <div class="absolute top-2 right-2 px-2 py-1 rounded text-xs font-bold"
             style="background: var(--color-coral); color: white;">
          <%= video_clip.virality_score.round(1) %>
        </div>
      <% end %>
    </div>

    <!-- Info -->
    <div class="p-3">
      <h3 class="font-medium text-sm truncate" style="color: var(--color-snow);">
        <%= video_clip.display_title %>
      </h3>
      <p class="text-xs mt-1" style="color: var(--color-mist);">
        <%= video_clip.formatted_time_range %>
        <span class="mx-1">&bull;</span>
        <%= video_clip.aspect_ratio %>
      </p>
    </div>
  <% end %>
<% end %>
