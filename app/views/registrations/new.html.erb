<div class="max-w-md mx-auto py-12 animate-fade-in">
  <div class="text-center mb-8">
    <div class="inline-flex w-16 h-16 rounded-2xl items-center justify-center mb-4"
         style="background: var(--gradient-aurora);">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
      </svg>
    </div>
    <h1 class="text-3xl font-bold" style="color: var(--color-snow);">Создать аккаунт</h1>
    <p class="mt-2" style="color: var(--color-mist);">Начните использовать AppCaster бесплатно</p>
  </div>

  <div class="rounded-2xl p-8" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
    <%= form_with model: @user, url: signup_path, class: "space-y-5" do |f| %>
      <% if @user.errors.any? %>
        <div class="rounded-xl p-4" style="background: rgba(255, 107, 107, 0.1); border: 1px solid rgba(255, 107, 107, 0.2);">
          <ul class="text-sm space-y-1" style="color: var(--color-coral);">
            <% @user.errors.full_messages.each do |message| %>
              <li class="flex items-center">
                <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium mb-2", style: "color: var(--color-cloud);" do %>
          Имя
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5" style="color: var(--color-mist);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <%= f.text_field :name, autofocus: true, required: true, placeholder: "Ваше имя",
              class: "w-full pl-12 pr-4 py-3 rounded-xl transition-all duration-200 focus:outline-none focus:ring-2",
              style: "background: var(--color-obsidian); border: 1px solid var(--color-graphite); color: var(--color-snow); --tw-ring-color: var(--color-neon-blue);" %>
        </div>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium mb-2", style: "color: var(--color-cloud);" do %>
          Email
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5" style="color: var(--color-mist);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
            </svg>
          </div>
          <%= f.email_field :email, required: true, placeholder: "you@example.com",
              class: "w-full pl-12 pr-4 py-3 rounded-xl transition-all duration-200 focus:outline-none focus:ring-2",
              style: "background: var(--color-obsidian); border: 1px solid var(--color-graphite); color: var(--color-snow); --tw-ring-color: var(--color-neon-blue);" %>
        </div>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium mb-2", style: "color: var(--color-cloud);" do %>
          Пароль
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5" style="color: var(--color-mist);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <%= f.password_field :password, required: true, placeholder: "••••••••",
              class: "w-full pl-12 pr-4 py-3 rounded-xl transition-all duration-200 focus:outline-none focus:ring-2",
              style: "background: var(--color-obsidian); border: 1px solid var(--color-graphite); color: var(--color-snow); --tw-ring-color: var(--color-neon-blue);" %>
        </div>
        <p class="text-xs mt-2" style="color: var(--color-mist);">Минимум 6 символов</p>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium mb-2", style: "color: var(--color-cloud);" do %>
          Подтверждение пароля
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5" style="color: var(--color-mist);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <%= f.password_field :password_confirmation, required: true, placeholder: "••••••••",
              class: "w-full pl-12 pr-4 py-3 rounded-xl transition-all duration-200 focus:outline-none focus:ring-2",
              style: "background: var(--color-obsidian); border: 1px solid var(--color-graphite); color: var(--color-snow); --tw-ring-color: var(--color-neon-blue);" %>
        </div>
      </div>

      <%= f.submit "Создать аккаунт",
          class: "w-full py-4 rounded-xl font-semibold text-lg transition-all duration-300 hover:scale-[1.02] cursor-pointer",
          style: "background: var(--gradient-aurora); color: var(--color-void); box-shadow: 0 10px 40px rgba(0, 212, 255, 0.3);" %>
    <% end %>
  </div>

  <p class="text-center text-sm mt-6" style="color: var(--color-mist);">
    Уже есть аккаунт?
    <%= link_to "Войти", login_path,
        class: "font-medium transition-colors ml-1",
        style: "color: var(--color-neon-blue);" %>
  </p>
</div>
