<% content_for :page_title, "Редактировать проект" %>

<div class="max-w-2xl mx-auto">
  <div class="glass-card rounded-2xl p-8" style="border: 1px solid var(--color-graphite);">
    <div class="flex items-center gap-4 mb-6 pb-6" style="border-bottom: 1px solid var(--color-graphite);">
      <div class="w-12 h-12 rounded-xl flex items-center justify-center"
           style="background: <%= hex_to_rgba(@project.display_color, 0.15) %>;">
        <div class="w-5 h-5 rounded-full" style="background: <%= @project.display_color %>;"></div>
      </div>
      <div>
        <h1 class="font-display text-xl font-bold" style="color: var(--color-snow);">Редактировать проект</h1>
        <p class="text-sm" style="color: var(--color-mist);"><%= @project.name %></p>
      </div>
    </div>
    <%= render "form", project: @project %>
  </div>

  <div class="mt-8 text-center">
    <%= button_to project_path(@project), method: :delete,
        data: { turbo_confirm: "Удалить проект \"#{@project.name}\"?" },
        class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:bg-red-500/20",
        style: "color: var(--color-coral); border: 1px solid var(--color-coral);" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Удалить проект
    <% end %>
  </div>
</div>
