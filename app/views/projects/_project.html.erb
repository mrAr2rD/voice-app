<%= link_to project_path(project), class: "block glass-card rounded-2xl p-6 hover:bg-white/5 transition-all duration-200", id: dom_id(project) do %>
  <div class="flex items-start gap-4">
    <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0"
         style="background: <%= hex_to_rgba(project.display_color, 0.12) %>;">
      <div class="w-4 h-4 rounded-full" style="background: <%= project.display_color %>;"></div>
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="font-semibold truncate" style="color: var(--color-snow);"><%= project.name %></h3>
      <% if project.description.present? %>
        <p class="text-sm mt-1 line-clamp-2" style="color: var(--color-mist);"><%= project.description %></p>
      <% end %>
      <div class="flex items-center gap-4 mt-3 text-sm" style="color: var(--color-mist);">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <%= project.items_count %> элементов
        </span>
        <span><%= time_ago_in_words(project.updated_at) %> назад</span>
      </div>
    </div>
  </div>
<% end %>
