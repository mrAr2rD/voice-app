<%= turbo_frame_tag dom_id(translation) do %>
  <%= link_to translation,
      data: { turbo_frame: "_top" },
      class: "block rounded-2xl p-6 transition-all duration-200 hover:scale-[1.01]",
      style: "background: var(--color-abyss); border: 1px solid var(--color-graphite);" do %>
    <div class="flex items-start justify-between">
      <div class="flex-1 min-w-0 mr-4">
        <div class="flex items-center mb-2">
          <span class="text-sm font-medium px-2 py-1 rounded-lg mr-2"
                style="background: rgba(34, 211, 187, 0.1); color: var(--color-neon-green);">
            <%= translation.source_language_name %> → <%= translation.target_language_name %>
          </span>
          <span class="text-xs" style="color: var(--color-mist);">
            <%= translation.ai_model_name %>
          </span>
        </div>
        <p class="font-medium mb-1 truncate" style="color: var(--color-snow);">
          <%= translation.text_preview(80) %>
        </p>
        <p class="text-sm" style="color: var(--color-mist);">
          <%= time_ago_in_words(translation.created_at) %> назад
        </p>
      </div>
      <%= render "translations/status_badge", translation: translation %>
    </div>
  <% end %>
<% end %>
