<% content_for :page_title, "Транскрибации" %>

<% content_for :page_actions do %>
  <%= link_to new_transcription_path,
      class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:scale-105",
      style: "background: var(--color-neon-blue); color: var(--color-void);" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Новая транскрибация
  <% end %>
<% end %>

<%= turbo_stream_from "user_#{current_user.id}_transcriptions" %>

<div id="transcriptions" class="space-y-4">
  <% if @transcriptions.empty? %>
    <div class="text-center py-16">
      <div class="w-20 h-20 mx-auto mb-6 rounded-2xl flex items-center justify-center"
           style="background: rgba(0, 212, 255, 0.1);">
        <svg class="w-10 h-10" style="color: var(--color-neon-blue);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold mb-2" style="color: var(--color-snow);">Нет транскрибаций</h3>
      <p class="mb-6" style="color: var(--color-mist);">Загрузите аудио или видео для преобразования в текст</p>
      <%= link_to new_transcription_path,
          class: "inline-flex items-center px-6 py-3 rounded-xl font-semibold transition-all duration-300 hover:scale-105",
          style: "background: var(--color-neon-blue); color: var(--color-void);" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Новая транскрибация
      <% end %>
    </div>
  <% else %>
    <%= render @transcriptions %>
  <% end %>
</div>
