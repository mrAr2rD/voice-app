<% content_for :page_title, "YouTube подключение" %>

<div class="max-w-2xl mx-auto">
  <div class="glass-card rounded-2xl p-8 text-center">
    <div class="w-20 h-20 mx-auto mb-6 rounded-2xl flex items-center justify-center"
         style="background: rgba(255, 0, 0, 0.1);">
      <svg class="w-10 h-10" style="color: #FF0000;" fill="currentColor" viewBox="0 0 24 24">
        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/>
        <polygon fill="white" points="9.75,15.02 15.5,12.02 9.75,9.02"/>
      </svg>
    </div>

    <h2 class="text-2xl font-bold mb-2" style="color: var(--color-snow);">YouTube подключён</h2>

    <div class="mt-6 p-4 rounded-xl" style="background: var(--color-obsidian);">
      <p class="text-sm" style="color: var(--color-mist);">Канал</p>
      <p class="font-semibold text-lg" style="color: var(--color-snow);"><%= @credential.channel_name %></p>
      <% if @credential.channel_id.present? %>
        <p class="text-sm mt-1" style="color: var(--color-mist);">ID: <%= @credential.channel_id %></p>
      <% end %>
    </div>

    <div class="mt-8 flex items-center justify-center gap-4">
      <%= link_to video_builders_path,
          class: "inline-flex items-center px-6 py-3 rounded-xl font-medium transition-all duration-200 hover:scale-105",
          style: "background: var(--color-coral); color: var(--color-void);" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
        </svg>
        Перейти к видео
      <% end %>

      <%= button_to youtube_disconnect_path, method: :delete,
          data: { turbo_confirm: "Отключить YouTube аккаунт?" },
          class: "inline-flex items-center px-6 py-3 rounded-xl font-medium transition-all duration-200 hover:bg-red-500/20",
          style: "border: 1px solid var(--color-coral); color: var(--color-coral);" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        Отключить
      <% end %>
    </div>
  </div>
</div>
