<% content_for :page_title, "История активностей" %>

<div class="animate-fade-in">
  <!-- Filter Tabs -->
  <div class="flex items-center space-x-2 mb-6 overflow-x-auto pb-2">
    <%= link_to activities_path,
        class: "flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 whitespace-nowrap #{@filter == 'all' ? '' : 'hover:bg-white/5'}",
        style: @filter == 'all' ? "background: var(--gradient-aurora); color: var(--color-void);" : "border: 1px solid var(--color-graphite); color: var(--color-cloud);" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
      </svg>
      Все
    <% end %>

    <%= link_to activities_path(filter: "transcriptions"),
        class: "flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 whitespace-nowrap #{@filter == 'transcriptions' ? '' : 'hover:bg-white/5'}",
        style: @filter == 'transcriptions' ? "background: var(--color-neon-blue); color: var(--color-void);" : "border: 1px solid var(--color-graphite); color: var(--color-cloud);" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
      </svg>
      Транскрибации
    <% end %>

    <%= link_to activities_path(filter: "voice_generations"),
        class: "flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 whitespace-nowrap #{@filter == 'voice_generations' ? '' : 'hover:bg-white/5'}",
        style: @filter == 'voice_generations' ? "background: var(--color-neon-purple); color: white;" : "border: 1px solid var(--color-graphite); color: var(--color-cloud);" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
      </svg>
      Озвучки
    <% end %>

    <%= link_to activities_path(filter: "translations"),
        class: "flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 whitespace-nowrap #{@filter == 'translations' ? '' : 'hover:bg-white/5'}",
        style: @filter == 'translations' ? "background: var(--color-neon-green); color: var(--color-void);" : "border: 1px solid var(--color-graphite); color: var(--color-cloud);" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
      </svg>
      Переводы
    <% end %>
  </div>

  <!-- Activities List -->
  <% if @activities.any? %>
    <div class="rounded-2xl overflow-hidden" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
      <div class="divide-y" style="border-color: var(--color-graphite);">
        <% @activities.each do |activity| %>
          <%= link_to activity.path,
              class: "flex items-center justify-between p-4 transition-all duration-200 hover:bg-white/5 group",
              data: { turbo_frame: "_top" } do %>
            <div class="flex items-center min-w-0 flex-1">
              <div class="w-10 h-10 rounded-lg flex items-center justify-center mr-4 flex-shrink-0"
                   style="background: <%= activity.icon_bg %>;">
                <svg class="w-5 h-5" style="color: <%= activity.icon_color %>;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <%= activity.icon_svg.html_safe %>
                </svg>
              </div>
              <div class="min-w-0 flex-1">
                <div class="flex items-center space-x-2">
                  <p class="font-medium truncate group-hover:text-white transition-colors" style="color: var(--color-snow);">
                    <%= activity.title %>
                  </p>
                  <span class="px-2 py-0.5 text-xs rounded-full flex-shrink-0"
                        style="background: <%= activity.icon_bg %>; color: <%= activity.icon_color %>;">
                    <%= activity.type_label %>
                  </span>
                </div>
                <div class="flex items-center text-sm mt-1" style="color: var(--color-mist);">
                  <% if activity.subtitle.present? %>
                    <span class="truncate"><%= activity.subtitle %></span>
                    <span class="mx-2">&middot;</span>
                  <% end %>
                  <span class="flex-shrink-0"><%= time_ago_in_words(activity.created_at) %> назад</span>
                </div>
              </div>
            </div>
            <div class="ml-4 flex-shrink-0">
              <%= render activity.status_partial, **activity.status_locals %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="rounded-2xl p-12 text-center" style="background: var(--color-abyss); border: 1px solid var(--color-graphite);">
      <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4"
           style="background: var(--color-graphite);">
        <svg class="w-8 h-8" style="color: var(--color-mist);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold mb-2" style="color: var(--color-snow);">Нет активностей</h3>
      <p class="mb-6" style="color: var(--color-mist);">
        <% case @filter %>
        <% when "transcriptions" %>
          У вас пока нет транскрибаций
        <% when "voice_generations" %>
          У вас пока нет озвучек
        <% when "translations" %>
          У вас пока нет переводов
        <% else %>
          Начните с создания транскрибации, озвучки или перевода
        <% end %>
      </p>
      <div class="flex items-center justify-center space-x-3">
        <%= link_to new_transcription_path,
            class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:scale-105",
            style: "background: var(--color-neon-blue); color: var(--color-void);" do %>
          Транскрибация
        <% end %>
        <%= link_to new_voice_generation_path,
            class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:scale-105",
            style: "background: var(--color-neon-purple); color: white;" do %>
          Озвучка
        <% end %>
        <%= link_to new_translation_path,
            class: "inline-flex items-center px-4 py-2 rounded-xl font-medium transition-all duration-200 hover:scale-105",
            style: "background: var(--color-neon-green); color: var(--color-void);" do %>
          Перевод
        <% end %>
      </div>
    </div>
  <% end %>
</div>
